# Charles Schwab API Credentials
# Get these from https://developer.schwab.com/
SCHWAB_APP_KEY=your_app_key_here
SCHWAB_APP_SECRET=your_app_secret_here
SCHWAB_CALLBACK_URL=https://127.0.0.1:8182/callback
SCHWAB_TOKEN_PATH=./token.json

# Account
SCHWAB_ACCOUNT_HASH=your_account_hash_here
# Optional index if token is linked to multiple accounts (0-based)
SCHWAB_ACCOUNT_INDEX=-1

# Trading Mode: "paper" or "live"
TRADING_MODE=paper

# Optional LLM advisor
LLM_ENABLED=true
LLM_PROVIDER=google
LLM_MODEL=gemini-3.1-pro-thinking-preview
LLM_BASE_URL=http://127.0.0.1:11434
LLM_MODE=advisory
LLM_RISK_STYLE=moderate
LLM_TIMEOUT_SECONDS=20
LLM_TEMPERATURE=0.1
LLM_MIN_CONFIDENCE=0.55
LLM_TRACK_RECORD_FILE=bot/data/llm_track_record.json
LLM_REASONING_EFFORT=high
LLM_TEXT_VERBOSITY=low
LLM_MAX_OUTPUT_TOKENS=500
LLM_CHAT_FALLBACK_MODEL=gemini-3.1-flash-thinking-preview
LLM_ENSEMBLE_ENABLED=false
LLM_ENSEMBLE_MODELS=google:gemini-3.1-pro-thinking-preview,google:gemini-3.1-flash-thinking-preview
LLM_ENSEMBLE_AGREEMENT_THRESHOLD=0.66
LLM_JOURNAL_ENABLED=false
LLM_JOURNAL_FILE=bot/data/trade_journal.json
LLM_JOURNAL_CONTEXT_ENTRIES=20

# News intelligence
NEWS_ENABLED=true
NEWS_CACHE_SECONDS=900
NEWS_REQUEST_TIMEOUT_SECONDS=10
NEWS_MAX_SYMBOL_HEADLINES=8
NEWS_MAX_MARKET_HEADLINES=15
NEWS_INCLUDE_SYMBOL_NEWS=true
NEWS_INCLUDE_MARKET_NEWS=true
NEWS_LLM_SENTIMENT_ENABLED=true
NEWS_LLM_SENTIMENT_CACHE_SECONDS=1800
NEWS_LLM_MODEL=gemini-3.1-pro-thinking-preview
NEWS_LLM_REASONING_EFFORT=medium
NEWS_LLM_TEXT_VERBOSITY=low
NEWS_LLM_MAX_OUTPUT_TOKENS=400
NEWS_LLM_CHAT_FALLBACK_MODEL=gemini-3.1-flash-thinking-preview
FINNHUB_API_KEY=

# Execution lifecycle controls
EXECUTION_CANCEL_STALE_ORDERS=true
EXECUTION_STALE_ORDER_MINUTES=20
EXECUTION_INCLUDE_PARTIALS_IN_LEDGER=true

# Optional provider keys
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Optional webhook alerts
ALERTS_ENABLED=false
ALERTS_WEBHOOK_URL=
ALERTS_MIN_LEVEL=ERROR
ALERTS_TIMEOUT_SECONDS=5
# Set true only after webhook is configured for live incidents
ALERTS_REQUIRE_IN_LIVE=false
ALERTS_TRADE_NOTIFICATIONS=false
ALERTS_DAILY_SUMMARY=false
ALERTS_REGIME_CHANGES=false
ALERTS_WEEKLY_SUMMARY=false

# Runtime logging rotation
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Only needed if LLM_PROVIDER=openai
OPENAI_API_KEY=

