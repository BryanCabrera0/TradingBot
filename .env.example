# Charles Schwab API Credentials
# Get these from https://developer.schwab.com/
SCHWAB_APP_KEY=your_app_key_here
SCHWAB_APP_SECRET=your_app_secret_here
SCHWAB_CALLBACK_URL=https://127.0.0.1:8182/callback
SCHWAB_TOKEN_PATH=./token.json

# Account
SCHWAB_ACCOUNT_HASH=your_account_hash_here

# Trading Mode: "paper" or "live"
TRADING_MODE=paper

# Optional LLM advisor
LLM_ENABLED=false
LLM_PROVIDER=ollama
LLM_MODEL=llama3.1:8b
LLM_BASE_URL=http://127.0.0.1:11434
LLM_MODE=advisory
LLM_RISK_STYLE=moderate
LLM_TIMEOUT_SECONDS=20
LLM_TEMPERATURE=0.1
LLM_MIN_CONFIDENCE=0.55

# Only needed if LLM_PROVIDER=openai
OPENAI_API_KEY=
