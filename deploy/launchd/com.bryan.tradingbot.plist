<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<!-- Replace __PROJECT_ROOT__ before loading this plist. -->
<dict>
  <key>Label</key>
  <string>com.bryan.tradingbot</string>

  <key>ProgramArguments</key>
  <array>
    <string>__PROJECT_ROOT__/.venv/bin/python</string>
    <string>__PROJECT_ROOT__/main.py</string>
    <string>--live</string>
    <string>--yes</string>
  </array>

  <key>WorkingDirectory</key>
  <string>__PROJECT_ROOT__</string>

  <key>EnvironmentVariables</key>
  <dict>
    <key>PYTHONUNBUFFERED</key>
    <string>1</string>
  </dict>

  <key>KeepAlive</key>
  <true/>

  <key>RunAtLoad</key>
  <true/>

  <key>StandardOutPath</key>
  <string>__PROJECT_ROOT__/logs/launchd.out.log</string>

  <key>StandardErrorPath</key>
  <string>__PROJECT_ROOT__/logs/launchd.err.log</string>
</dict>
</plist>
